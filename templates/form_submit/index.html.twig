<title>{% block title %}IMC calculator{% endblock %}</title>

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form name="form_contato" method="post">
        <div data-wow-delay="0.3s">
            <input type="number" class="form-control" name="peso" placeholder="Seu peso atual">
            <input type="number" class="form-control" name="altura" placeholder="Sua altura em cm">
            <button class="btn-submit" type="submit"><i class="lni-arrow-right"></i></button>
        </div>
    </form>
</div>
{% endblock %}
